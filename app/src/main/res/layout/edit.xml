<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Nomor Resi"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textresi"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Nama Jenazah"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editjenazah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Jenis Kelamin"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editjk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Umur Jenazah"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editumur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Nama Pengirim"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editpengirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Alamat Pengirim"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editalp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="No Telp"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edittelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Kota Tujuan"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editpulau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Alamat Tujuan"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editalt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Tanggal Kirim"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edittanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Waktu Kirim"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editwaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Via"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/editvia"
            android:entries="@array/via"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:text="Status"
            android:layout_width="115dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/editstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/statusnya"/>
    </LinearLayout>

    <Button
        android:id="@+id/simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simpan"/>
</LinearLayout>
</ScrollView>